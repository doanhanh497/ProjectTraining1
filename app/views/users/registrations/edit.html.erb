<div class="pass-form">
  <%= form_for(resource, as: resource_name, url: user_registration_path,
    html: { method: :put, :multipart => true }, remote: true) do |f| %>
    <%= link_to :back, class: "close" do %><i class="fa fa-times"></i><% end %>

    <h3 class="text-center"><%= t "registrations.change_info" %></h3>

    <div class="error-message"></div>

    <div class="change-avatar">
      <% if current_user.avatar.url.present? %>
        <img id="img-prev" src="#" class="hidden image">
        <%= image_tag current_user.avatar.url, class: "image", id: "img-avatar" %>
      <% else %>
        <%= image_tag "default_avatar64.png", class: "image"%>
      <% end %>
      <div class="middle">
        <%= f.label :avatar, "Upload", class: "btn btn-success" %>
          <%= f.file_field :avatar, class: "hidden" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :email, t("registrations.email") %>
      <%= f.email_field :email,
        class: "form-control", required: true %>
    </div>

    <div class="field">
      <%= f.label :name, t("registrations.name") %>
      <%= f.text_field :name,
        class: "form-control", required: true %>
    </div>

    <%= check_box_tag :change_pass %>
    <%= label_tag :change_pass, t("registrations.check_box") %><br>
    <div class="form-change-pass">
      <div class="field">
        <%= f.label :current_password, t("registrations.current_pass") %>
        <%= f.password_field :current_password,
          class: "form-control add-required" %>
      </div>

      <div class="field">
        <%= f.label :password, t("registrations.new_pass") %>
        <%= f.password_field :password,
          class: "form-control add-required" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t("registrations.confirm_new_pass") %>
        <%= f.password_field :password_confirmation,
          class: "form-control add-required" %><br>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "update", class: "btn btn-success btn-block" %>
    </div>
  <% end %>
</div>
